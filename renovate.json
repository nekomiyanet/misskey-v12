{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base", ":timezone(Asia/Tokyo)"
	],
	"schedule": ["after 10pm and before 5am every weekend"],
	"dependencyDashboard": true,
	"major": {
    "enabled": false
  },
	"minor": {
    "enabled": false
  },
	"packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": false
    }
	]
}
